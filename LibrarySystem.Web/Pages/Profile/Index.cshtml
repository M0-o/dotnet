@page
@model LibrarySystem.Web.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = "Profile";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1"><i class="bi bi-person-fill me-2 text-primary"></i>My Profile</h2>
        <p class="text-muted mb-0">Manage your account settings</p>
    </div>
</div>

<div class="row">
    <!-- Profile Card -->
    <div class="col-lg-4 mb-4">
        <div class="card shadow-sm border-0 text-center">
            <div class="card-body py-5">
                <div class="position-relative d-inline-block mb-3">
                    <img src="@Model.ProfilePictureUrl" alt="Profile" 
                         class="rounded-circle border border-3 border-primary" 
                         style="width: 120px; height: 120px; object-fit: cover;">
                    <button class="btn btn-primary btn-sm position-absolute bottom-0 end-0 rounded-circle" 
                            style="width: 35px; height: 35px;" data-bs-toggle="modal" data-bs-target="#changePictureModal">
                        <i class="bi bi-camera"></i>
                    </button>
                </div>
                <h4 class="mb-1">@Model.UserName</h4>
                <p class="text-muted mb-3">@Model.UserEmail</p>
                <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#changeNameModal">
                    <i class="bi bi-pencil me-1"></i>Edit Name
                </button>
            </div>
        </div>

        <!-- Theme Toggle Card -->
        <div class="card shadow-sm border-0 mt-3">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-palette me-2"></i>Theme Preferences</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Background Theme</h6>
                        <small class="text-muted">Switch between light and dark mode</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="themeToggle" 
                               style="width: 50px; height: 25px; cursor: pointer;"
                               onchange="toggleTheme(this.checked)">
                        <label class="form-check-label ms-2" for="themeToggle" id="themeLabel">Light</label>
                    </div>
                </div>
                <div class="mt-3 p-3 rounded theme-preview" id="themePreview">
                    <small class="text-muted">Preview area</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Deadlines Section -->
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-check me-2 text-warning"></i>Book Deadlines</h5>
                <span class="badge bg-warning text-dark">@Model.LentBooks.Count() Active Loans</span>
            </div>
            <div class="card-body">
                @if (Model.LentBooks.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Book</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                    <th>Days</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.LentBooks.OrderBy(b => b.DueDate))
                                {
                                    var isOverdue = book.DueDate.HasValue && book.DueDate.Value < DateTime.Now;
                                    var daysLeft = book.DueDate.HasValue ? (book.DueDate.Value - DateTime.Now).Days : 0;
                                    
                                    <tr class="@(isOverdue ? "table-danger" : "")">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@book.CoverImageUrl" alt="@book.Title" 
                                                     class="rounded me-3" style="width: 40px; height: 55px; object-fit: cover;">
                                                <div>
                                                    <h6 class="mb-0">@book.Title</h6>
                                                    <small class="text-muted">@book.Author</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            @book.DueDate?.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="align-middle">
                                            @if (isOverdue)
                                            {
                                                <span class="badge bg-danger">Overdue</span>
                                            }
                                            else if (daysLeft <= 3)
                                            {
                                                <span class="badge bg-warning text-dark">Due Soon</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">On Time</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            @if (isOverdue)
                                            {
                                                <span class="text-danger fw-bold">@Math.Abs(daysLeft) days overdue</span>
                                            }
                                            else
                                            {
                                                <span>@daysLeft days left</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-calendar-x display-4 text-muted"></i>
                        <h5 class="mt-3">No Active Loans</h5>
                        <p class="text-muted">You don't have any borrowed books at the moment.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Account Stats -->
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card shadow-sm border-0 bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-book display-6"></i>
                        <h3 class="mt-2 mb-0">@(Model.BoughtBooks.Count() + Model.LentBooks.Count())</h3>
                        <small>Total Books</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0 bg-success text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-bag-check display-6"></i>
                        <h3 class="mt-2 mb-0">@Model.BoughtBooks.Count()</h3>
                        <small>Purchased</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0 bg-warning">
                    <div class="card-body text-center">
                        <i class="bi bi-hourglass-split display-6"></i>
                        <h3 class="mt-2 mb-0">@Model.LentBooks.Count()</h3>
                        <small>Borrowed</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Picture Modal -->
<div class="modal fade" id="changePictureModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-camera me-2"></i>Change Profile Picture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="UpdatePicture">
                    <div class="mb-3">
                        <label class="form-label">Profile Picture URL</label>
                        <input type="url" class="form-control" name="pictureUrl" 
                               placeholder="https://example.com/image.jpg">
                        <small class="text-muted">Enter a URL to your new profile picture</small>
                    </div>
                    <div class="text-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Change Name Modal -->
<div class="modal fade" id="changeNameModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Change Display Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="UpdateName">
                    <div class="mb-3">
                        <label class="form-label">Display Name</label>
                        <input type="text" class="form-control" name="newName" 
                               value="@Model.UserName" required>
                    </div>
                    <div class="text-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleTheme(isDark) {
        const body = document.body;
        const label = document.getElementById('themeLabel');
        const preview = document.getElementById('themePreview');
        
        if (isDark) {
            body.classList.add('dark-theme');
            label.textContent = 'Dark';
            preview.style.backgroundColor = '#1a1a2e';
            preview.style.color = '#eee';
            localStorage.setItem('theme', 'dark');
        } else {
            body.classList.remove('dark-theme');
            label.textContent = 'Light';
            preview.style.backgroundColor = '#f8f9fa';
            preview.style.color = '#333';
            localStorage.setItem('theme', 'light');
        }
    }

    // Load saved theme
    document.addEventListener('DOMContentLoaded', function() {
        const savedTheme = localStorage.getItem('theme');
        const toggle = document.getElementById('themeToggle');
        if (savedTheme === 'dark') {
            toggle.checked = true;
            toggleTheme(true);
        }
    });
</script>
