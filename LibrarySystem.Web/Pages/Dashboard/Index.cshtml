@page
@model LibrarySystem.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1"><i class="bi bi-grid-1x2-fill me-2 text-primary"></i>Dashboard</h2>
        <p class="text-muted mb-0">Browse our collection of books</p>
    </div>
    <div class="d-flex gap-2">
        <span class="badge bg-primary fs-6">
            <i class="bi bi-book me-1"></i>@Model.Books.Count() Books
        </span>
    </div>
</div>

<div class="row">
    <!-- Genre Filter Sidebar -->
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-funnel-fill me-2"></i>Filter by Genre</h5>
            </div>
            <div class="card-body">
                <form method="get" id="filterForm">
                    @foreach (var genre in Model.AllGenres)
                    {
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="selectedGenres" 
                                   value="@genre" id="genre-@genre"
                                   @(Model.SelectedGenres.Contains(genre) ? "checked" : "")
                                   onchange="document.getElementById('filterForm').submit()">
                            <label class="form-check-label" for="genre-@genre">
                                @genre.ToString().Replace("ScienceFiction", "Sci-Fi").Replace("SelfHelp", "Self Help").Replace("NonFiction", "Non-Fiction")
                            </label>
                        </div>
                    }
                    <hr>
                    <a href="/Dashboard" class="btn btn-outline-secondary btn-sm w-100">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                </form>
            </div>
        </div>
    </div>

    <!-- Books Display -->
    <div class="col-md-9">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var book in Model.Books)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 book-card">
                        <div class="position-relative">
                            <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                            @if (!book.IsAvailable)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-danger m-2">Unavailable</span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 end-0 badge bg-success m-2">Available</span>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-secondary mb-2 align-self-start">@book.Genre</span>
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text text-muted small">by @book.Author</p>
                            <p class="card-text small">@book.Description</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary mb-0">$@book.Price.ToString("F2")</span>
                                    <form method="post" asp-page-handler="AddToCart" class="d-inline">
                                        <input type="hidden" name="bookId" value="@book.Id" />
                                        <button type="submit" class="btn btn-primary btn-sm" @(book.IsAvailable ? "" : "disabled")>
                                            <i class="bi bi-cart-plus me-1"></i>Add to Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Books.Any())
        {
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-search display-4 d-block mb-3"></i>
                <h4>No books found</h4>
                <p class="mb-0">Try adjusting your filter criteria</p>
            </div>
        }
    </div>
</div>

<style>
    .book-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }
</style>
