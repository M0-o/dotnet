@page
@model LibrarySystem.Web.Pages.Library.IndexModel
@{
    ViewData["Title"] = "My Library";
    ViewData["ActivePage"] = "Library";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1"><i class="bi bi-collection-fill me-2 text-primary"></i>My Library</h2>
        <p class="text-muted mb-0">Books you've bought or borrowed</p>
    </div>
</div>

<!-- Filter Tabs -->
<ul class="nav nav-pills mb-4" id="libraryTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link @(Model.Filter == "all" ? "active" : "")" href="?filter=all">
            <i class="bi bi-grid-3x3-gap-fill me-1"></i>All
            <span class="badge bg-light text-dark ms-1">@(Model.BoughtBooks.Count() + Model.LentBooks.Count())</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link @(Model.Filter == "bought" ? "active" : "")" href="?filter=bought">
            <i class="bi bi-bag-check-fill me-1"></i>Bought
            <span class="badge bg-light text-dark ms-1">@Model.BoughtBooks.Count()</span>
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link @(Model.Filter == "lent" ? "active" : "")" href="?filter=lent">
            <i class="bi bi-hourglass-split me-1"></i>Borrowed
            <span class="badge bg-light text-dark ms-1">@Model.LentBooks.Count()</span>
        </a>
    </li>
</ul>

<!-- Bought Books Section -->
@if (Model.Filter == "all" || Model.Filter == "bought")
{
    @if (Model.BoughtBooks.Any())
    {
        <div class="mb-5">
            @if (Model.Filter == "all")
            {
                <h4 class="mb-3"><i class="bi bi-bag-check text-success me-2"></i>Purchased Books</h4>
            }
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var book in Model.BoughtBooks)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 border-start border-success border-4">
                            <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height: 160px; object-fit: cover;">
                            <div class="card-body">
                                <span class="badge bg-success mb-2">Purchased</span>
                                <h6 class="card-title">@book.Title</h6>
                                <p class="card-text text-muted small mb-0">by @book.Author</p>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <small class="text-success"><i class="bi bi-check-circle-fill me-1"></i>Owned Forever</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else if (Model.Filter == "bought")
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-bag display-4 d-block mb-3"></i>
            <h4>No purchased books yet</h4>
            <p class="mb-3">Start building your collection today!</p>
            <a href="/Dashboard" class="btn btn-primary">Browse Books</a>
        </div>
    }
}

<!-- Lent Books Section -->
@if (Model.Filter == "all" || Model.Filter == "lent")
{
    @if (Model.LentBooks.Any())
    {
        <div class="mb-4">
            @if (Model.Filter == "all")
            {
                <h4 class="mb-3"><i class="bi bi-hourglass-split text-warning me-2"></i>Borrowed Books</h4>
            }
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var book in Model.LentBooks)
                {
                    var isOverdue = book.DueDate.HasValue && book.DueDate.Value < DateTime.Now;
                    var daysLeft = book.DueDate.HasValue ? (book.DueDate.Value - DateTime.Now).Days : 0;
                    
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 border-start border-4 @(isOverdue ? "border-danger" : "border-warning")">
                            <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height: 160px; object-fit: cover;">
                            <div class="card-body">
                                <span class="badge @(isOverdue ? "bg-danger" : "bg-warning text-dark") mb-2">
                                    @(isOverdue ? "Overdue" : "Borrowed")
                                </span>
                                <h6 class="card-title">@book.Title</h6>
                                <p class="card-text text-muted small mb-0">by @book.Author</p>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                @if (book.DueDate.HasValue)
                                {
                                    <div class="@(isOverdue ? "text-danger" : "text-muted")">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        <small>
                                            Due: @book.DueDate.Value.ToString("MMM dd, yyyy")
                                            @if (isOverdue)
                                            {
                                                <span class="fw-bold">(@Math.Abs(daysLeft) days overdue)</span>
                                            }
                                            else
                                            {
                                                <span>(@daysLeft days left)</span>
                                            }
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else if (Model.Filter == "lent")
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-hourglass display-4 d-block mb-3"></i>
            <h4>No borrowed books</h4>
            <p class="mb-3">You haven't borrowed any books yet</p>
            <a href="/Dashboard" class="btn btn-primary">Browse Books</a>
        </div>
    }
}

@if (!Model.BoughtBooks.Any() && !Model.LentBooks.Any() && Model.Filter == "all")
{
    <div class="alert alert-info text-center py-5">
        <i class="bi bi-collection display-4 d-block mb-3"></i>
        <h4>Your library is empty</h4>
        <p class="mb-3">Start adding books to your collection!</p>
        <a href="/Dashboard" class="btn btn-primary">Browse Books</a>
    </div>
}
