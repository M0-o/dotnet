@page
@model LibrarySystem.Web.Pages.Admin.BooksModel
@{
    ViewData["Title"] = "Manage Books";
    ViewData["ActivePage"] = "Admin";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3"><i class="bi bi-book me-2"></i>Manage Books</h1>
            <p class="text-muted">Add, edit, or remove books from the library</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBookModal">
                <i class="bi bi-plus-circle me-2"></i>Add New Book
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Genre</th>
                            <th>Price</th>
                            <th>Available</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Books)
                        {
                            <tr>
                                <td>@book.Id</td>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td><span class="badge bg-secondary">@book.Genre</span></td>
                                <td>$@book.Price.ToString("F2")</td>
                                <td>
                                    @if (book.IsAvailable)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No</span>
                                    }
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-primary" 
                                            onclick="editBook(@book.Id, '@book.Title', '@book.Author', '@((int)book.Genre)', @book.Price.ToString("F2"), @book.IsAvailable.ToString().ToLower(), '@book.Description', '@book.CoverImageUrl')">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@book.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this book?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Book Modal -->
<div class="modal fade" id="addBookModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Add New Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" name="BookInput.Title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Author</label>
                        <input type="text" class="form-control" name="BookInput.Author" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Genre</label>
                        <select class="form-select" name="BookInput.Genre" required>
                            @foreach (var genre in Enum.GetValues<LibrarySystem.Domain.Enums.Genre>())
                            {
                                <option value="@((int)genre)">@genre</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" step="0.01" class="form-control" name="BookInput.Price" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="BookInput.Description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cover Image URL</label>
                        <input type="text" class="form-control" name="BookInput.CoverImageUrl">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" name="BookInput.IsAvailable" checked>
                        <label class="form-check-label">Available</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Book</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Book Modal -->
<div class="modal fade" id="editBookModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Update">
                <input type="hidden" id="editBookId" name="BookInput.Id">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" id="editTitle" name="BookInput.Title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Author</label>
                        <input type="text" class="form-control" id="editAuthor" name="BookInput.Author" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Genre</label>
                        <select class="form-select" id="editGenre" name="BookInput.Genre" required>
                            @foreach (var genre in Enum.GetValues<LibrarySystem.Domain.Enums.Genre>())
                            {
                                <option value="@((int)genre)">@genre</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" step="0.01" class="form-control" id="editPrice" name="BookInput.Price" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="editDescription" name="BookInput.Description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cover Image URL</label>
                        <input type="text" class="form-control" id="editCoverUrl" name="BookInput.CoverImageUrl">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="editIsAvailable" name="BookInput.IsAvailable">
                        <label class="form-check-label">Available</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Book</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editBook(id, title, author, genre, price, isAvailable, description, coverUrl) {
            document.getElementById('editBookId').value = id;
            document.getElementById('editTitle').value = title;
            document.getElementById('editAuthor').value = author;
            document.getElementById('editGenre').value = genre;
            document.getElementById('editPrice').value = price;
            document.getElementById('editDescription').value = description || '';
            document.getElementById('editCoverUrl').value = coverUrl || '';
            document.getElementById('editIsAvailable').checked = isAvailable;
            
            var editModal = new bootstrap.Modal(document.getElementById('editBookModal'));
            editModal.show();
        }
    </script>
}
